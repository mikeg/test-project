<span> Test Centers </span>
<span> <%= link_to "Add test center", new_test_center_path %> </span>
<br/><br/>

<% unless @test_centers.empty? %>
<table border=1 style="border-collapse: collapse">
  <tr>
    <td width="380"> Name </td>
    <td width="70"> Code </td>
    <td width="450"> Address </td>
  </tr>
  
  <% @test_centers.each do |center| %>
  <tr>
     <td><%= center.name rescue ''%></td>
     <td><%= center.code rescue ''%></td>
     <td><%= center.address rescue ''%></td>
  </tr>
  <% end %>
</table>

<%= will_paginate @test_centers %>
<% end%>