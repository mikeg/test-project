<div id="login_content">
  <%= image_tag "bongif.gif", :size => "100x100" -%>
  <%= content_tag :h1, "NURSING SYSTEM" -%>
  <%= content_tag :h3, "Philippine Nursing Online System"  -%>
  <%= content_tag :hr %>
  <div id="date_today">
    Today is <%= Time.now.strftime("%B %d, %Y") -%>
  </div>
  <%= content_tag :hr %>
  <div id="login_form">
    <div></div>
    <span>Welcome</span>
    <div id="login_error">
      
    </div>
    <span id="errors" style="font-size:11px;color: red;text-decoration: italic">
     <%= flash[:error] if flash[:error] -%>
    </span>
    <% form_for :user, @users, :url => authenticate_sessions_path, :method => :post do |f| %>
      <ul>
        <li>Username: <%= f.text_field :username %></li>
        <li>Password : <%= f.password_field :password %></li>
        <li><%= submit_tag 'Log in' %></li>
      </ul>
    <% end %>
  </div>
</div>
