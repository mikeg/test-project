<span class="page_title">Add Cashier</span>
<br/><br/>
<% form_tag new_cashier_path, :method => 'post' do %>
<ul style="list-style:none; margin: 0px; padding:0px">
  <li>Firstname: </li>
  <li ><%= text_field_tag "user[firstname]",nil, :class => "text_field" -%></li>
  <li >Lastname: </li>
  <li ><%= text_field_tag "user[lastname]", nil, :class => "text_field" -%></li>
  <li> Location Handled: </li>
  <li><%= select_tag "user[location]", options_for_select(@prc_locations,nil), :class => "text_field" %>
      <%= link_to "add_new", new_prc_location_path%></li>
  <li>Employee No.: </li>
  <li><%= text_field_tag "user[employee_no]",nil, :class => "text_field" %></li>
  <li>Username: </li>
  <li><%= text_field_tag "user[username]", nil, :class => "text_field" %></li>
  <li>Password: </li>
  <li><%= password_field_tag "user[password]", nil, :class => "text_field" %></li>
  <li>Access status: </li>
  <li>Enable: <%= radio_button_tag "user[is_active]", "1", false %>
    Disable: <%= radio_button_tag "user[is_active]", "0", true %>
    </li>
  <li>
  <br/><%= submit_tag "Submit",  :class => "submit_tag" %> <%= link_to "cancel", cashiers_path %></li>
</ul>
<% end -%>    