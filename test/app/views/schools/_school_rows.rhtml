<div style="clear:both"></div>
<table cellpadding=2 cellspacing=2 border=1 width="100%" style="border-collapse: collapse">
  <tr bgcolor="##6699FF">
    <td>School Name </td>
    <td>PRC Code </td>
    <td>Region</td>
    <td>Province</td>
    <td>Location</td>
    <td>Zip Code</td>
    <td>Area Code</td>
    <td>Rurban Code</td>
    <td>Status</td>
    <td>Action</td>
  </tr>
  <%
  @schools.each do |school|
  %>
  <tr>
    <td><%= link_to school.name, edit_school_path(school) -%></td>
    <td><%= school.prc_school_code -%></td>
    <td><%= school.region.name unless school.region.nil? -%></td>
    <td><%= school.province.name unless school.province.nil? -%></td>
    <td><%= school.town.name unless school.town.nil? -%></td>
    <td><%= school.area_code unless school.area_code.nil? -%></td>
    <td><%= school.zip_code unless school.zip_code.nil? -%></td>
    <td><%= school.status_name -%></td>
    <td>
      <div id="actions">
        <%= link_to "edit", edit_school_path(school) %>
        <%= link_to "delete", school_path(school), :confirm => "Are you sure you want to delete this?", :method => "delete" %>
      </div>
    </td>
    <td><%= school.rurban_code rescue '' -%></td>
  </tr>
  <% end %>
</table>
<br/><%= will_paginate @schools %>
</div>