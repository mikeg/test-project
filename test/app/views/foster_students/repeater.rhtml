<h5>Add a Repeater or Conditioned:</h5>

<div id="search_school">
 <% form_tag repeater_foster_students_path, :method => :get do %>
 Search a student: <%= text_field_tag "search", params[:search], :size => "40" -%>
 <%= submit_tag "Search", :class => "submit_tag"%>
 <% end %>

<% if params[:search] && @students.empty?%>
 <div class="notice">
   No data result for your request.
 </di>
<% end -%>

<%
unless @students.empty?
%>

<div style="clear:both"></div>
 <table cellpadding=2 cellspacing=2 border=1 width="100%" style="border-collapse: collapse">
   <tr bgcolor="##6699FF">
     <td>Student Name </td>
     <td>School</td>
     <td>Gender</td>
     <td>Region</td>
     <td>Province</td>
     <td>Town</td>
   </tr>
   <%
   @students.each do |student|
   %>
   <tr>
     <td><%= link_to student.fullname, view_foster_student_path(student) -%></td>
     <td><%= student.school.name rescue ''%></td>
     <td><%= student.sex %></td>
     <td><%= student.region.name %></td>
     <td><%= student.province.name %></td>
     <td><%= student.town.name %></td>
   </tr>
   <% end %>
 </table>


<% end %>
 <%= will_paginate @students unless @students.empty?%>
 </div>

</div>
